<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="24dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Course Name: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tvSectionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Section Name: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Description: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvAssociatedTerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Associated Term: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRegistrationDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Registration Date: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLevels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Levels: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Note: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Credit: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Type: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvProfessor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Professor: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tvDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Days: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tvDateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="DateRange: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvScheduleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="ScheduleType: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGrayLight"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Time: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvWhere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGrayLight"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="where: "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>
